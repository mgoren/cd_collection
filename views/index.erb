<h1>CD Collection</h1>
<% @collection.all().each() do |disc| %>
  <%= disc.artist() %> - <%= disc.title() %><br>
<% end %>

<h2>Add CD:</h2>
<form action="/success" method="POST">
  <div class="form-group">
    <label class="form-label" for="artist">Artist:</label>
    <input type="text" id="artist" name="artist" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label class="form-label" for="title">Title:</label>
    <input type="text" id="title" name="title" class="form-control">
  </div>
  <button type="submit" class="btn-success">Add CD</button>
</form>

<h2>Delete CD:</h2>
<h3>Type artist and/or title to delete.</h3>
<form action="/delete" method="POST">
  <div class="form-group">
    <label class="form-label" for="artist">Artist:</label>
    <input type="text" id="artist" name="artist" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label class="form-label" for="title">Title:</label>
    <input type="text" id="title" name="title" class="form-control">
  </div>
  <button type="submit" class="btn-success">Delete CD</button>
</form>

<h2> Search for an artist</h2>
<h3>Type an artist's name to find their albums.</h3>
<form action="/search" method="GET">
  <div class="form-group">
    <label class="form-label" for="artist">Artist:</label>
    <input type="text" id="artist" name="artist" class="form-control" autofocus>
  </div>
  <button type="submit" class="btn-success">Search</button>
</form>

<% if @matches != nil && @matches != [] %>
  <h2> Albums by <%= @artist %> </h2>
  <% @matches.each() do |title| %>
    <%= title %><br>
  <% end %>
<% end %>
